{
	"name": "server",
	"version": "1.0.0",
	"description": "passit-app Node.js server for JWT authentication with PostgreSQL",
	"main": "dist/server.js",
	"scripts": {
		"start": "nodemon ./server.ts",
		"client": "cd ../client && npm start",
		"start:react": "concurrently \"npm start\" \"npm run client\"",
		"start:prod": "npm run build && nodemon ./dist/src/server.js",
        "db:create": "ts-node ./src/db/db.initialize.ts",
        "db:generate": "ts-node ./src/db/db.generate.ts",
		"build": "npx tsc"
	},
	"keywords": [
		"node js",
		"jwt",
		"authentication",
		"express",
		"postgresql"
	],
	"author": "Tal <tal.jacobov@gmail.com>",
	"license": "ISC",
	"devDependencies": {
		"@types/cors": "2.8.12",
		"@types/dotenv": "8.2.0",
		"@types/express": "4.17.13",
		"@types/node": "18.7.14",
		"@types/pg": "8.6.5",
		"nodemon": "2.0.19",
		"ts-node": "10.9.1",
		"tsc-watch": "5.0.3",
		"tslint": "6.1.3",
		"typescript": "4.8.2"
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.0",
		"concurrently": "^7.3.0",
		"cors": "^2.8.5",
		"dotenv": "16.0.2",
		"express": "4.18.1",
		"jsonwebtoken": "^8.5.1",
		"pg": "^8.8.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.21.4"
	}
}
